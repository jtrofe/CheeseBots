<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:id="@+id/cv">

    <RelativeLayout
        android:id="@+id/flailFrame"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/flailName"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_below="@id/flailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/flailImage"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerInside"
                android:maxWidth="60dp"
                android:maxHeight="60dp" />

            <!-- Mass info -->
            <TextView
                android:id="@+id/label_mass"
                android:text="@string/flail_info_mass"
                android:layout_alignParentTop="true"
                style="@style/InventoryInfoLabel" />
            <com.jtrofe.cheesebots.inventory.GaugeView
                android:id="@+id/inventory_flail_mass_gauge"
                android:layout_toEndOf="@+id/flailImage"
                android:layout_below="@+id/label_mass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Radius info -->
            <TextView
                android:id="@+id/label_radius"
                android:text="@string/flail_info_radius"
                android:layout_below="@+id/inventory_flail_mass_gauge"
                style="@style/InventoryInfoLabel" />

            <com.jtrofe.cheesebots.inventory.GaugeView
                android:id="@+id/inventory_flail_radius_gauge"
                android:layout_toEndOf="@+id/flailImage"
                android:layout_below="@+id/label_radius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <!-- K info -->
            <TextView
                android:id="@+id/label_k"
                android:text="@string/flail_info_k"
                android:layout_below="@+id/inventory_flail_radius_gauge"
                style="@style/InventoryInfoLabel" />

            <com.jtrofe.cheesebots.inventory.GaugeView
                android:id="@+id/inventory_flail_k_gauge"
                android:layout_toEndOf="@+id/flailImage"
                android:layout_below="@+id/label_k"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>