<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:animateLayoutChanges="true"
    android:visibility="invisible"
    android:id="@+id/layout_submit_score"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_weight="5"
        android:animateLayoutChanges="true"
        android:background="@drawable/inventory_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <FrameLayout
            android:background="@color/inventory_light_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


            <TextView
                android:text="Submit score"
                android:gravity="center_horizontal"
                android:id="@+id/header_submit"
                android:textColor="@color/inventory_text_color"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/layout_input"
                android:layout_below="@+id/header_submit"
                style="@style/Place">

                <EditText
                    android:id="@+id/input_name"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/input_button"
                    android:src="@android:drawable/ic_menu_upload"
                    android:tint="@color/inventory_text_color"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>



        <FrameLayout
            android:background="@drawable/inventory_border"
            android:layout_alignTop="@+id/header_submit"
            android:layout_alignBottom="@+id/layout_input"

            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

</LinearLayout>