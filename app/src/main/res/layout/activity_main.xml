<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="#000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/inventory_background"
        android:layout_margin="10dp"
        android:layout_above="@+id/layout_scores"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_play"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            style="@style/InventoryButton"
            android:layout_marginTop="30dp"
            android:text="@string/button_play" />

        <!--<Button
            android:id="@+id/button_inventory"
            android:text="@string/button_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->

    </RelativeLayout>

        <Button android:layout_above="@+id/adView"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="30dp"

            android:layout_centerHorizontal="true"
            style="@style/InventoryButton"
            android:id="@+id/button_highscores"
            android:text="@string/button_highscores" />


        <include android:layout_above="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"

            layout="@layout/view_scores" />


    <com.google.android.gms.ads.AdView
        android:visibility="invisible"
        android:id="@+id/adView"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000" />
</RelativeLayout>