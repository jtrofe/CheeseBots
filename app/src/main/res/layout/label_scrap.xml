<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/inventory_button"
    android:paddingStart="10dp"
    android:paddingEnd="4dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/scrap_label_text"
        android:textColor="@color/inventory_text_color"
        android:text="100"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/inventory_icon_scrap"
        android:src="@drawable/icon_scrap"
        android:tint="@color/inventory_text_color"
        android:layout_marginStart="4dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</LinearLayout>