<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/inventory_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <FrameLayout
        android:background="@color/inventory_light_background"
        android:layout_alignTop="@+id/buy_content"
        android:layout_alignBottom="@id/buy_content"
        android:layout_alignStart="@id/buy_content"
        android:layout_alignEnd="@id/buy_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:id="@+id/buy_content"
        android:background="@drawable/inventory_border"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/buy_title"
            android:layout_alignTop="@+id/buy_label_scrap"
            android:layout_alignBottom="@+id/buy_label_scrap"
            android:gravity="center_vertical"
            android:text="Upgrade Flail"
            style="@style/Upgrade.Label"/>

        <include layout="@layout/label_scrap"
            android:layout_toEndOf="@id/buy_title"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buy_label_scrap" />

    </RelativeLayout>

