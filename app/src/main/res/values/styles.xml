<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Inventory styles -->
    <style name="InventoryButton">
        <item name="android:textColor">@color/inventory_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/inventory_button</item>
    </style>
    <style name="InventoryGaugeView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="InventoryCheckBox">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:background">@drawable/inventory_value_unchecked</item>
    </style>
    <style name="InventoryInfoLabel">
        <item name="android:layout_toEndOf">@id/flailImage</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Upgrade dialog styles -->
    <style name="Upgrade">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Upgrade.Label" parent="Upgrade">
        <item name="android:textColor">@color/inventory_text_color</item>
    </style>
    <style name="Upgrade.GaugeView" parent="Upgrade">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>
    <style name="Upgrade.Button" parent="Upgrade">
        <item name="android:background">@drawable/inventory_button</item>
        <item name="android:src">@android:drawable/ic_input_add</item>
        <item name="android:tint">@color/inventory_text_color</item>
        <item name="android:visibility">invisible</item>
    </style>

    <!-- Game styles -->
    <style name="GenericButton">
        <item name="android:textColor">#FFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <!-- High score styles -->
    <style name="ScoresButton">
        <item name="android:background">@drawable/window</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/scoreboard_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Place">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="Place.Star">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@android:drawable/btn_star</item>
    </style>
    <style name="Place.Name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/scoreboard_text_color</item>
    </style>
    <style name="Place.Score">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColor">@color/scoreboard_text_color</item>
    </style>
</resources>
